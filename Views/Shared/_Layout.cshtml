<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="Refresh" content="@ViewBag.RefreshDelay" />
    <title>@ViewBag.Title - RSS Reader</title>
    <link rel="stylesheet" href="~/Content/Site.css">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar navbar-nav ">
                <ul class="nav">
                    <li class="nav-item">
                        @Html.ActionLink("Домашняя страница", "Index", "Home")
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Настройки", "ChangeSettings", "Settings")
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <hr>
    <div class="container body-content">
        <div class="row">
            @RenderBody()
        </div>
    </div> 
    <hr />
    <div class="container footet-content">
        <footer>
            <p>&copy; @DateTime.Now.Year - Тестовое задание №2 на ASP.NET</p>
        </footer>
    </div>
    

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
